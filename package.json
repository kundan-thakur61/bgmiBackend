{
  "name": "battlexzone-backend",
  "version": "2.0.0",
  "description": "BattleXZone — Production BGMI Tournament & Match Platform API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "start:prod": "cross-env NODE_ENV=production node app.js",
    "seed": "node seeds/index.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "lint": "npx eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "npx eslint . --ext .js --ignore-path .gitignore --fix",
    "health": "curl -s http://localhost:${PORT:-5000}/health | node -e \"process.stdin.on('data',d=>{const h=JSON.parse(d);console.log(h.status==='healthy'?'✅ Healthy':'❌ '+h.status);process.exit(h.status==='healthy'?0:1)})\"",
    "db:migrate": "node scripts/migrate.js",
    "docker:build": "docker build -t battlexzone-api -f Dockerfile ..",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "image-hash": "^5.3.1",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.2",
    "redis": "^4.6.12",
    "request": "^2.88.2",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "twilio": "^5.11.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
